{
  "name": "loco",
  "displayName": "Loco - AI Assistant",
  "description": "AI code assistant with contextual chat and inline completions",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "copilot",
    "chat",
    "code-completion",
    "groq"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "loco.openChat",
        "title": "Loco: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "loco.toggleInlineCompletions",
        "title": "Loco: Toggle Inline Completions"
      },
      {
        "command": "loco.explainCode",
        "title": "Loco: Explain Code",
        "icon": "$(question)"
      },
      {
        "command": "loco.debugCode",
        "title": "Loco: Debug Code",
        "icon": "$(bug)"
      },
      {
        "command": "loco.documentCode",
        "title": "Loco: Generate Documentation",
        "icon": "$(book)"
      },
      {
        "command": "loco.refactorCode",
        "title": "Loco: Refactor Code",
        "icon": "$(tools)"
      },
      {
        "command": "loco.clearCache",
        "title": "Loco: Clear Cache"
      },
      {
        "command": "loco.clearChat",
        "title": "Loco: Clear Chat History"
      },
      {
        "command": "loco.addFileReference",
        "title": "Loco: Add File to Chat Context"
      },
      {
        "command": "loco.openSettings",
        "title": "Loco: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "loco.showAvailableModels",
        "title": "Loco: Show Available Models",
        "icon": "$(list-unordered)"
      }
    ],
    "keybindings": [
      {
        "command": "loco.openChat",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      },
      {
        "command": "loco.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "loco.debugCode",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Loco AI Assistant",
      "properties": {
        "loco.general.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Loco AI assistant",
          "order": 1
        },
        "loco.general.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Backend server URL",
          "order": 2
        },
        "loco.providers.defaultProvider": {
          "type": "string",
          "enum": [
            "ollama",
            "groq", 
            "openai",
            "gemini"
          ],
          "enumDescriptions": [
            "Local Ollama models (privacy-first)",
            "Groq (fast inference with Llama models)",
            "OpenAI (GPT models)",
            "Google Gemini (advanced reasoning)"
          ],
          "default": "ollama",
          "description": "Default LLM provider for chat and completions",
          "order": 10
        },
        "loco.chat.model": {
          "type": "string",
          "default": "",
          "description": "Model for chat conversations. Leave empty to use provider's default. Use commands to select models.",
          "order": 20
        },
        "loco.chat.model.ollama": {
          "type": "string",
          "default": "qwen2.5-coder:7b",
          "description": "Default Ollama model for chat",
          "order": 21
        },
        "loco.chat.model.groq": {
          "type": "string",
          "default": "llama-3.3-70b-versatile",
          "description": "Default Groq model for chat",
          "order": 22
        },
        "loco.chat.model.gemini": {
          "type": "string",
          "default": "gemini-1.5-flash",
          "description": "Default Gemini model for chat",
          "order": 23
        },
        "loco.chat.model.openai": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Default OpenAI model for chat",
          "order": 24
        },
        "loco.chat.temperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0.0,
          "maximum": 2.0,
          "description": "Temperature for chat responses (0.0 = deterministic, 2.0 = very creative)",
          "order": 25
        },
        "loco.chat.maxTokens": {
          "type": "number",
          "default": 2048,
          "minimum": 100,
          "maximum": 8192,
          "description": "Maximum tokens in chat responses",
          "order": 22
        },
        "loco.completions.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable inline code completions as you type",
          "order": 30
        },
        "loco.inlineCompletions": {
          "type": "boolean",
          "default": false,
          "description": "Show inline code completions (temporary testing setting)",
          "order": 31
        },
        "loco.completions.model": {
          "type": "string", 
          "default": "",
          "description": "Model for inline completions. Leave empty to use provider-specific defaults.",
          "order": 31
        },
        "loco.completions.model.ollama": {
          "type": "string",
          "default": "qwen2.5-coder:7b",
          "description": "Default Ollama model for completions",
          "order": 32
        },
        "loco.completions.model.groq": {
          "type": "string",
          "default": "llama-3.1-8b-instant",
          "description": "Default Groq model for completions",
          "order": 33
        },
        "loco.completions.model.gemini": {
          "type": "string",
          "default": "gemini-1.5-flash",
          "description": "Default Gemini model for completions",
          "order": 34
        },
        "loco.completions.model.openai": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Default OpenAI model for completions",
          "order": 35
        },
        "loco.completions.delay": {
          "type": "number",
          "default": 250,
          "minimum": 100,
          "maximum": 1000,
          "description": "Delay before triggering completions (ms). Lower = faster but more API calls",
          "order": 36
        },
        "loco.completions.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Temperature for completions (0.0-0.3 recommended for code)",
          "order": 37
        },
        "loco.ui.theme": {
          "type": "string",
          "enum": [
            "auto",
            "light", 
            "dark"
          ],
          "enumDescriptions": [
            "Follow VS Code theme",
            "Always use light theme",
            "Always use dark theme"
          ],
          "default": "auto",
          "description": "Chat panel theme",
          "order": 40
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "loco.explainCode",
          "when": "editorHasSelection",
          "group": "loco@1"
        },
        {
          "command": "loco.debugCode",
          "when": "editorHasSelection",
          "group": "loco@2"
        },
        {
          "command": "loco.documentCode",
          "when": "editorHasSelection",
          "group": "loco@3"
        },
        {
          "command": "loco.refactorCode",
          "when": "editorHasSelection",
          "group": "loco@4"
        },
        {
          "command": "loco.addFileReference",
          "when": "editorFocus",
          "group": "loco@5"
        }
      ],
      "commandPalette": [
        {
          "command": "loco.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "loco.debugCode",
          "when": "editorHasSelection"
        },
        {
          "command": "loco.documentCode",
          "when": "editorHasSelection"
        },
        {
          "command": "loco.refactorCode",
          "when": "editorHasSelection"
        }
      ],
      "view/title": [
        {
          "command": "loco.clearChat",
          "when": "view == loco.chatView",
          "group": "navigation"
        },
        {
          "command": "loco.openSettings",
          "when": "view == loco.chatView",
          "group": "navigation"
        }

      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "marked": "^11.2.0"
  }
}
